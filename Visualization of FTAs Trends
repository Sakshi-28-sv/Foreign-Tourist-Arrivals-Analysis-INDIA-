plt.figure(figsize=(12, 5))  
plt.plot(df.index, df["Total_FTAs"], marker='o', linestyle='-', color='b', label="Total FTAs")  
plt.title("Monthly Foreign Tourist Arrivals in India")  
plt.xlabel("Year")  
plt.ylabel("Total FTAs")  
plt.grid(True)  
plt.legend()  
plt.xticks(rotation=45)  
plt.show()
